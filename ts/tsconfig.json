{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "../static/js",
    "removeComments": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/utils/*", "src/utils/**/*"]
}
